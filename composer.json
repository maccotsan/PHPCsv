{
    "name": "maccotsan/csv",
    "description": "",
    "keywords": ["csv"],
    "type": "library",
    "homepage": "https://github.com/maccotsan/PHPCsv/",
    "license": "MIT",
    "authors": [
        {
            "name": "maccotsan",
            "email": "maccotsan@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/maccotsan/PHPStringTool.git"
        }
    ],
    "require": {
        "php": ">=5.5",
        "maccotsan/stringtool": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5",
        "phpdocumentor/phpdocumentor": "2.*"
    },
    "autoload": {
        "psr-4": {
            "maccotsan\\Csv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "maccotsan\\Csv\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
		"cs": [
			"phpcs --config-set encoding utf-8",
			"phpcs --standard=ruleset.xml src/* tests/*"
		],
        "doc": [
            "vendor/bin/phpdoc -d src -t docs --template=abstract"
        ]
    }
}
